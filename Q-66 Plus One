class Solution {
    public int[] plusOne(int[] digits) {
        int r=0,i;
        int n=digits.length;
        
        for(i=n-1;i>=0;i--)
        {
           if(digits[i]<9)
           {
               digits[i]++;
            return digits;
           }
            digits[i]=0;
        }
            int digit[]=new int[n+1];
            digit[0]=1;
        return digit;
///hi akhil            
        
    }
}
